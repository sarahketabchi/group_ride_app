<h1>Sign in</h1>

<%= form_for(:session, url: session_path) do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Sign in", :class => 'btn btn-primary' %>
  </p>
<% end %>