<h1><%= @user.name %>'s Information</h1>


<p>
  <%= @user.email %><br>
  <%= @user.phone_number %>
</p>

<p>
  Rides <%= @user.name %> organized:
  <ul>
    <% @user.organized_rides.each do |ride| %>
      <li><%= link_to ride.title, group_ride_path(ride) %></li>
    <% end %>
  </ul>
</p>

<p>
  Rides <%= @user.name %> is attending:
  <ul>
    <% @user.group_rides.each do |ride| %>
      <li><%= link_to ride.title, group_ride_path(ride) %></li>
    <% end %>
  </ul>
</p>

